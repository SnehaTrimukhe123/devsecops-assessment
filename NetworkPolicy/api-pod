apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: api-traffic-policy
  namespace: default
spec:
  podSelector:
    matchLabels:
      app: api
  ingress:
  - from:
    - podSelector:
        matchLabels:
          app: database
    - podSelector:
        matchLabels:
          app: web
    ports:
    - protocol: TCP
      port: 80
